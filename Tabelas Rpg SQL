CREATE TABLE Armaduras
(
    NOME_ARMADURA varchar(60) PRIMARY KEY,
    PRECO int NOT NULL,
    DEFESA int NOT NULL,
    PESO int NOT NULL
);

CREATE TABLE Armas
(
    NOME_ARMA varchar(60) PRIMARY KEY,
    PRECO int NOT NULL,
    DANO int NOT NULL,
    TIPO_DANO varchar(20),
    ALCANCE int NOT NULL,
    PESO int NOT NULL
);

CREATE TABLE Classe
(
    NOME_CLASSE varchar(30) PRIMARY KEY,
    VIDA int NOT NULL,
    MANA int NOT NULL
);

CREATE TABLE Escudos(

    NOME_ESCUDO VARCHAR(20) PRIMARY KEY,
    PRECO INT NOT NULL,
    DESEFESA INT NOT NULL,
    PESO INT NOT NULL

);

CREATE TABLE Municoes(

    NOME_MUNICOES VARCHAR(20) PRIMARY KEY,
    DANO INT NOT NULL,
    TIPO VARCHAR(20) NOT NULL,
    PESO INT NOT NULL,
    PRECO INT NOT NULL
);

CREATE TABLE Racas(
    NOME_RACAS VARCHAR(25) PRIMARY KEY,
    FORCA INT NOT NULL,
    DESTREZA INT NOT NULL,
    INTELIGENCIA INT NOT NULL,
    CONSTITUICAO INT NOT NULL,
    SABEDORIA INT NOT NULL,
    CARISMA INT NOT NULL,
    PESO INT NOT NULL

);

CREATE TABLE Equipamentos
(
    ID_EQUIP int PRIMARY KEY AUTO_INCREMENT,
    FOREIGN KEY (NOME_ARMADURA) REFERENCES Armaduras(NOME_ARMADURA),
    FOREIGN KEY (NOME_ARMA) REFERENCES Armas(NOME_ARMA),
    FOREIGN KEY (NOME_ESCUDO) REFERENCES Escudos(NOME_ESCUDO),
    FOREIGN KEY (NOME_MUNICOES) REFERENCES Municoes(NOME_MUNICOES)
);

CREATE TABLE Conta(
    ID_CONTA INT PRIMARY KEY AUTO_INCREMENT,
    NOME VARCHAR(30) NOT NULL,
    SENHA VARCHAR(20) NOT NULL
    EMAIL VARCHAR(100) UNIQUE,
    TELEFONE INT NOT NULL,
    DATA_NASCIMENTO DATE,
    NICK VARCHAR(30) NOT NULL
);

CREATE TABLE Personagem(

    CODIGO INT PRIMARY KEY AUTO_INCREMENT,
    NOME VARCHAR(50) UNIQUE,
    IDADE INT NOT NULL,
    SEXO CHAR NOT NULL,
    VIDA INT NOT NULL,
    MANA INT NOT NULL,
    DEFESA INT NOT NULL,
    NIVEL INT NOT NULL,
    FORCA INT NOT NULL,
    DESTREZA INT NOT NULL,
    INTELIGENCIA INT NOT NULL,
    CARISMA INT NOT NULL,
    SABEDORIA INT NOT NULL,
    CONSTITUICAO INT NOT NULL,
    PESO INT NOT NULL,
    FOREIGN KEY (NOME_CLASSE) REFERENCES Classe(NOME_CLASSE),
    FOREIGN KEY (ID_EQUIP) REFERENCES Equipamentos(ID_EQUIP1),
    FOREIGN KEY (NOME) REFERENCES Racas(NOME),
    FOREIGN KEY (ID_CONTA) REFERENCES Conta(ID_CONTA)

);
